@using System.Threading
@using System.Web.Optimization
@model MedioClinic.Models.PageViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Home | Medio Clinic</title>
    <!-- CSS  -->
    <link rel="shortcut icon" type="image/png" href="~/Content/Images/Logo/mcfavicon.ico">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/Css/Master/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/Css/Master/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/Css/Master/icons.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt"
          crossorigin="anonymous">
</head>

<body>
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="index.html" class="brand-logo">
                <img class="kn-logo" src="">
                <strong>Medio</strong>Clinic
            </a>
            <!-- Languages selector -->
            <ul id="langs" class="dropdown-content">
                @foreach (var culture in Model.Cultures)
                {
                    <li>
                        <a href="/@culture.CultureCode/home/index">@culture.CultureShortName</a>
                    </li>
                }
            </ul>

            <ul class="right hide-on-med-and-down">

                @foreach (var menuitem in Model.MenuItems)
                {
                    <li>
                        <a href="@Url.Action(menuitem.Action, menuitem.Controller)">@menuitem.Caption</a>
                    </li>
                }

                <li>
                    <a class="dropdown-trigger" href="#" data-target="langs">
                        @Model.Cultures.FirstOrDefault().CultureShortName
                        <i class="fas fa-globe-africa right"></i>
                    </a>
                </li>
            </ul>
            <ul id="nav-mobile" class="sidenav">
                <li class="kn-bold">
                    <a href="index.html">Home</a>
                </li>
                <li>
                    <a href="doctors.html">Our doctors</a>
                </li>
                <li>
                    <a href="contact.html">Contact us</a>
                </li>
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger">
                <i class="material-icons">menu</i>
            </a>
        </div>
    </nav>


    @RenderBody()
    <footer class="page-footer blue-grey darken-4">
        <div class="container">
            <div class="row">
                <div class="col l4 s12">
                    @if (Model.Company != null)
                    {
                    <h5 class="white-text">@Html.Localize("Footer.Contact")</h5>
                        <div class="grey-text text-lighten-4">
                            <p class="kn-smaller kn-address">
                                <address>
                                    <strong>@Model.Company.Name</strong>
                                    <br> @Model.Company.PhoneNumber
                                    <br> @Model.Company.Email
                                    <br> @Model.Company.ShortAddress
                                </address>
                            </p>
                        </div>
                    }
                </div>
                @if (Model.SocialLinks != null)
                {
                    <div class="col l4 s12">
                        <h5 class="white-text">@Html.Localize("Footer.FollowUs")</h5>
                        <div class="kn-social">
                            @foreach (var socialLink in Model.SocialLinks)
                            {
                                <a href="@socialLink.Url" title="@socialLink.Title">
                                    <img src="@Url.KenticoImageUrl(socialLink.Icon.GetPath())">
                                </a>
                            }
                        </div>
                    </div>
                }


                <div class="col l4 s12">
                    <h5 class="white-text">Navigation</h5>
                    <ul class="kn-smaller">
                        <li>
                            <a class="white-text" href="#">Our doctors</a>
                        </li>
                        <li>
                            <a class="white-text" href="#">Contact Us</a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="footer-copyright white">
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <div class="blue-grey-text text-darken-2">
                            Built with
                            <a href="http://materializecss.com">Materialize</a> for the MVC Developer training. Kentico, 2018.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/Master/main.js"></script>
    <script src="~/Scripts/Master/materialize.min.js"></script>
    <script src="~/Scripts/Master/init.js"></script>

</body>

</html>